<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".ProductDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="15dp"
            android:padding="2dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:id="@+id/descImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="#D7D8D8">

            </ImageView>
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="135dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                />
<!--            <ProgressBar-->
<!--                android:id="@+id/progressbar"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_marginLeft="150dp"-->
<!--                android:background="@drawable/progressbar_shape"-->
<!--                android:progressDrawable="@drawable/progressbar_bg"-->
<!--                android:indeterminate="false"-->
<!--                android:max="100"-->

<!--                />-->
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="@color/white">

        <TextView
            android:id="@+id/descProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/lightBlue"
            android:maxLines="3"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
                android:weightSum="1"
            android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/color_circle"
                    android:padding="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="Color :"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="7dp"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/descColor"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Black"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="start"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ram"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="RAM :"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="7dp"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/descRam"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="3 GB"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/storage"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Storage :"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="7dp"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/descStorage"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="64 GB"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="Price :"
                    android:textColor="@color/lightGreen"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="7dp"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/descPrice"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="3900"
                    android:textColor="@color/lightGreen"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <com.borutsky.neumorphism.NeumorphicFrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:background_color="@color/green"
                app:corner_radius="50dp"
                app:shape="rectangle"
                app:state="flat">
                <Button
                    android:id="@+id/placeOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Place Order"
                    android:textSize="20sp"
                    android:background="@color/green"/>
            </com.borutsky.neumorphism.NeumorphicFrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>